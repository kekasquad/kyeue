<resources>

    <style name="Theme.Qeyeu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Qeyeu.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.Qeyeu.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Theme.Qeyeu.Paragraph.Bold</item>
        <item name="hintTextColor">@color/colorOnSurfaceMedium</item>
        <item name="shapeAppearance">@style/Theme.Qeyeu.SmoothCornerView</item>
        <item name="android:textAppearance">@style/TextAppearance.Theme.Qeyeu.Paragraph.Bold</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.Qeyeu.SmoothCornerView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>